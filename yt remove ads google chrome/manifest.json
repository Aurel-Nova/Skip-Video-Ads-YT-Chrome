{
    "name": "Remove Youtube Ads(Chrome)",
    "author":"Nova Music records",
    "description": "Remove Youtube Ads.Load extension then disable,then go to youtube select a video then start the extension then reload youtube video.",
    "version": "1.0.5",
    "manifest_version": 3,
    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "icons": {
      "16": "cropped16.png",
      "32": "cropped32.png",
      "48": "cropped48.png",
      "128": "cropped128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*.youtube.com/*"
        ],
        "include_gobs":[
            "*youtube.com/???s/*"
        ],
        "js": [
          "index.js",
          "background.js"
        ],
        "css":[
          "styles.css"
        ],
        "run_at": "document_start"
      }
    ],
    "host_permissions": [
      "*://*.api.com/*",
      "*://*.www.youtube.com/*"
    ]
  }